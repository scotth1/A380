<?xml version="1.0"?>

<PropertyList>

  <path>../../Models/Lights/flash.ac</path>
  <texture-path>../../Textures/Common/</texture-path>  

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>flash</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>flash</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>flash</object-name>
    <spherical type="bool">true</spherical>
  </animation>

<animation>
<type>select</type>
<object-name>flash</object-name>
<condition>
     <greater-than>
        <property>/controls/switches/nav-logo-lights</property>
        <value>0</value>
      </greater-than>
</condition>
</animation>

  <animation>
    <type>dist-scale</type>
    <object-name>flash</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>1</dep>
      </entry>
      <entry>
        <ind>20</ind>
        <dep>2</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>2</dep>
      </entry>
    </interpolation>
  </animation>



</PropertyList>
